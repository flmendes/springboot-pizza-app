<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <!-- OpenTelemetry Appender for Trace ID Correlation -->
    <appender
        name="OTEL"
        class="io.opentelemetry.instrumentation.logback.appender.v1_0.OpenTelemetryAppender"
    />

    <!-- Console Appender with Trace ID -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <!-- Pattern includes Trace ID and Span ID from MDC -->
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} %-5p [%X{trace_id} %X{span_id}] %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- File Appender (Optional) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/application.log</file>
        <encoder>
            <charset>UTF-8</charset>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} %-5p [%X{trace_id} %X{span_id}] %logger{36} - %msg%n
            </pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/application.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Async Appender for Performance -->
    <appender name="ASYNC_CONSOLE" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="OTEL" />
    </appender>

    <!-- Root Logger -->
    <root level="INFO">
        <appender-ref ref="ASYNC_CONSOLE" />
        <appender-ref ref="FILE" />
        <appender-ref ref="OTEL" />
    </root>

    <!-- Application Logger -->
    <logger name="com.mendes.example" level="DEBUG" />

    <!-- Spring Boot Logger -->
    <logger name="org.springframework.boot" level="INFO" />

    <!-- Database Logger -->
    <logger name="org.hibernate.SQL" level="DEBUG" />
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE" />

    <!-- Profile-Specific Configuration -->
    <springProfile name="dev">
        <root level="DEBUG">
            <appender-ref ref="ASYNC_CONSOLE" />
        </root>
    </springProfile>

    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="ASYNC_CONSOLE" />
            <appender-ref ref="FILE" />
        </root>
    </springProfile>

</configuration>
